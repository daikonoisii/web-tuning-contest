{
    "family": "lighthouse-contest-${STUDENT_ID}",
    "networkMode": "awsvpc",
    "containerDefinitions": [
      {
        "name": "${CONTAINER_NAME}",
        "image": "REPLACED_BY_GITHUB_ACTION",
        "memory": 512,
        "cpu": 256,
        "essential": true,
        "portMappings": [
          {
            "containerPort": 80,
            "hostPort": 80,
            "protocol": "tcp"
          }
        ]
      }
    ],
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::${{ secrets.AWS_ACCOUNT_ID }}:role/ecsTaskExecutionRole"
}
